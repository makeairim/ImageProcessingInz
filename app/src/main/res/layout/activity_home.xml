<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="resource"
            type="pl.edu.agh.imageprocessing.data.remote.Resource" />

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="pl.edu.agh.imageprocessing.features.detail.viemodel.HomeViewModel" />
