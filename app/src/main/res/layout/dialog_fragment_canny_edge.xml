<?xml version="1.0" encoding="utf-8"?>
<!-- fragment_edit_name.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/edit_name"
    android:theme="@style/AppDialogTheme"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:layout_gravity="center" android:orientation="vertical"  >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="171dp"
        android:orientation="horizontal"
        android:layout_margin="16dp">

        <TextView
            android:id="@+id/desc1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:text="@string/dialog_threshold_supressed_point_desc"
            app:layout_constraintEnd_toStartOf="@+id/accept_params"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_strong_point_threshold" />

        <EditText
            android:id="@+id/et_supressed_point_threshold"
            android:layout_width="30dp"
            android:layout_height="45dp"
            android:layout_below="@id/desc1"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:imeOptions="actionDone"
            android:inputType="number"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/desc1"
            app:layout_constraintStart_toStartOf="@+id/desc1"
            app:layout_constraintTop_toBottomOf="@+id/desc1" />

        <TextView
            android:id="@+id/desc2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"

            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="@string/dialog_threshold_strong_point_desc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintEnd_toStartOf="@+id/accept_params" />

        <EditText
            android:id="@+id/et_strong_point_threshold"
            android:layout_width="30dp"
            android:layout_height="45dp"
            android:layout_below="@id/desc2"
            android:layout_marginStart="8dp"
            android:imeOptions="actionDone"

            android:inputType="number"
            app:layout_constraintEnd_toEndOf="@+id/desc2"
            app:layout_constraintStart_toStartOf="@+id/desc2"
            app:layout_constraintTop_toBottomOf="@+id/desc2" />
        <ImageButton
            android:id="@+id/accept_params"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@color/colorAccent"
            app:srcCompat="@drawable/old_ic_done_black_24dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_state"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent" />
    </android.support.constraint.ConstraintLayout>
</LinearLayout>