<?xml version="1.0" encoding="utf-8"?>
<!-- fragment_edit_name.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/edit_name"
    android:theme="@style/AppDialogTheme"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:layout_gravity="center" android:orientation="vertical"  >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="16dp">

        <TextView
            android:id="@+id/desc1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/dialog_width_desc"
            app:layout_constraintBottom_toTopOf="@+id/txt_width"
            app:layout_constraintEnd_toEndOf="@+id/txt_width"
            app:layout_constraintStart_toStartOf="@+id/txt_width"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="8dp" />

        <EditText
            android:id="@+id/txt_width"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/desc1"
            android:layout_marginStart="60dp"
            android:imeOptions="actionDone"
            android:inputType="number"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="60dp" />

        <TextView
            android:id="@+id/desc2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/txt_width"
            android:layout_toRightOf="@id/desc1"
            android:text="@string/dialog_height_desc"
            app:layout_constraintBottom_toTopOf="@+id/txt_height"
            app:layout_constraintEnd_toEndOf="@+id/txt_height"
            app:layout_constraintStart_toStartOf="@+id/txt_height"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="8dp" />

        <EditText
            android:id="@+id/txt_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/desc2"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_toRightOf="@id/txt_width"
            android:imeOptions="actionDone"
            android:inputType="number"
            app:layout_constraintStart_toEndOf="@+id/txt_width"
            android:layout_toEndOf="@id/txt_width"
            app:layout_constraintHorizontal_bias="0.461"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toStartOf="@+id/accept_params" />
        <ImageButton
            android:id="@+id/accept_params"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@color/colorAccent"
            app:srcCompat="@drawable/old_ic_done_black_24dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_state"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" />
    </android.support.constraint.ConstraintLayout>
    <ir.hamsaa.RtlMaterialSpinner
        android:layout_margin="16dp"
        android:id="@+id/spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:ms_hint="hint"
        app:ms_enableFloatingLabel="false"
        app:ms_enableErrorLabel="false"
        app:ms_floatingLabelText="floating label"
        app:ms_baseColor="@color/colorPrimaryDark"
        app:ms_highlightColor="@color/colorPrimaryDark"
        app:ms_errorColor="@color/colorAccent"
        app:ms_thickness="2dp"
        app:ms_hintColor="@android:color/holo_blue_dark"
        app:ms_arrowSize="0dp"
        app:ms_alignLabels="false"
        app:ms_floatingLabelColor="@color/colorAccent"/>
</LinearLayout>