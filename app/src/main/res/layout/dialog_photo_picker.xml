<?xml version="1.0" encoding="utf-8"?><!-- fragment_edit_name.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="32dp"
    android:layout_marginEnd="32dp"
    android:paddingBottom="64dp"
    android:paddingTop="64dp"
    android:orientation="vertical"
    android:theme="@style/AppDialogTheme"
    android:layout_marginStart="32dp">

    <ImageButton
        android:id="@+id/iv_gallery_app"
        android:layout_margin="24dp"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_toLeftOf="@id/iv_gallery_phone"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ic_view_list_blue_24dp"
        android:layout_toStartOf="@id/iv_gallery_phone" />

    <ImageButton
        android:id="@+id/iv_gallery_phone"
        android:layout_centerInParent="true"
        android:layout_width="60dp"
        android:layout_margin="24dp"
        android:layout_height="80dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ic_photo_library_black_24dp" />

    <ImageButton
        android:id="@+id/iv_camera"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_margin="24dp"
        android:layout_toRightOf="@id/iv_gallery_phone"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ico_vec_camera"
        android:layout_toEndOf="@id/iv_gallery_phone" />

</RelativeLayout>